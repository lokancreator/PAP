<body>
    <div class="container">
        <div class="header">
            <h1>مرحباً بك</h1>
            <p>سجل الدخول للوصول إلى حسابك</p>
        </div>
        
        <div class="form-container">
            <div class="form-group">
                <label for="username">اسم المستخدم</label>
                <input type="text" id="username" placeholder="أدخل اسم المستخدم">
            </div>
            
            <div class="form-group">
                <label for="password">كلمة المرور</label>
                <input type="password" id="password" placeholder="أدخل كلمة المرور">
            </div>
            
            <button class="btn" onclick="login()">
                <span>تسجيل الدخول</span>
            </button>
            
            <div id="message" class="message"></div>
            
            <div class="form-footer">
                <p>ليس لديك حساب؟ <a onclick="showRegisterForm()">إنشاء حساب</a></p>
            </div>
        </div>
        
        <div class="form-container" id="registerForm" style="display: none;">
            <div class="form-group">
                <label for="newUsername">اسم المستخدم الجديد</label>
                <input type="text" id="newUsername" placeholder="اختر اسم مستخدم">
            </div>
            
            <div class="form-group">
                <label for="newPassword">كلمة المرور الجديدة</label>
                <input type="password" id="newPassword" placeholder="اختر كلمة مرور قوية">
            </div>
            
            <div class="form-group">
                <label for="confirmPassword">تأكيد كلمة المرور</label>
                <input type="password" id="confirmPassword" placeholder="أعد إدخال كلمة المرور">
            </div>
            
            <button class="btn" onclick="register()">
                <span>إنشاء حساب</span>
            </button>
            
            <div class="form-footer">
                <p>لديك حساب بالفعل؟ <a onclick="showLoginForm()">تسجيل الدخول</a></p>
            </div>
        </div>
        
        <div class="user-info" id="userInfo">
            <h2>مرحباً, <span id="userName"></span>!</h2>
            <div class="user-details">
                <p>لقد سجلت الدخول بنجاح إلى حسابك.</p>
            </div>
            <button class="btn btn-outline" onclick="logout()">
                <span>تسجيل الخروج</span>
            </button>
        </div>
    </div>

    <script>
        // بيانات المستخدمين (سيتم حفظها في localStorage)
        let users = JSON.parse(localStorage.getItem('users')) || {};
        
        // عناصر DOM
        const messageEl = document.getElementById('message');
        const loginForm = document.querySelector('.form-container');
        const registerForm = document.getElementById('registerForm');
        const userInfo = document.getElementById('userInfo');
        const userNameEl = document.getElementById('userName');
        
        // عرض رسالة للمستخدم
        function showMessage(text, type) {
            messageEl.textContent = text;
            messageEl.className = 'message ' + type;
            messageEl.style.display = 'block';
            
            // إخفاء الرسالة بعد 5 ثواني
            setTimeout(() => {
                messageEl.style.display = 'none';
            }, 5000);
        }
        
        // تسجيل الدخول
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (!username || !password) {
                showMessage('يرجى ملء جميع الحقول', 'error');
                return;
            }
            
            if (users[username] && users[username] === password) {
                showMessage('تم تسجيل الدخول بنجاح!', 'success');
                
                // حفظ حالة تسجيل الدخول
                localStorage.setItem('currentUser', username);
                
                // إخفاء نموذج التسجيل وإظهار معلومات المستخدم
                loginForm.style.display = 'none';
                registerForm.style.display = 'none';
                userInfo.style.display = 'block';
                userNameEl.textContent = username;
            } else {
                showMessage('اسم المستخدم أو كلمة المرور غير صحيحة', 'error');
            }
        }
        
        // تسجيل مستخدم جديد
        function register() {
            const username = document.getElementById('newUsername').value;
            const password = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (!username || !password || !confirmPassword) {
                showMessage('يرجى ملء جميع الحقول', 'error');
                return;
            }
            
            if (password !== confirmPassword) {
                showMessage('كلمتا المرور غير متطابقتين', 'error');
                return;
            }
            
            if (users[username]) {
                showMessage('اسم المستخدم موجود مسبقاً', 'error');
                return;
            }
            
            // إضافة المستخدم الجديد
            users[username] = password;
            localStorage.setItem('users', JSON.stringify(users));
            
            showMessage('تم إنشاء حسابك بنجاح! يمكنك تسجيل الدخول الآن', 'success');
            showLoginForm();
        }
        
        // تسجيل الخروج
        function logout() {
            localStorage.removeItem('currentUser');
            userInfo.style.display = 'none';
            loginForm.style.display = 'block';
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }
        
        // عرض نموذج التسجيل
        function showRegisterForm() {
            loginForm.style.display = 'none';
            registerForm.style.display = 'block';
            document.getElementById('newUsername').value = '';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmPassword').value = '';
        }
        
        // عرض نموذج تسجيل الدخول
        function showLoginForm() {
            registerForm.style.display = 'none';
            loginForm.style.display = 'block';
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }
        
        // التحقق من وجود مستخدم مسجل دخوله
        function checkLogin() {
            const currentUser = localStorage.getItem('currentUser');
            if (currentUser) {
                loginForm.style.display = 'none';
                registerForm.style.display = 'none';
                userInfo.style.display = 'block';
                userNameEl.textContent = currentUser;
            }
        }
        
        // تهيئة الصفحة عند التحميل
        window.onload = function() {
            checkLogin();
        };
    </script>
</body>
</html>
